<form method="post" class="mensajeeliminar" action="{{ path('materiales_delete', {'id': materiale.id}) }}" onsubmit="return confirm('¿Estás seguro que quieres eliminar este elemento?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ materiale.id) }}">

    <a href="{{ path('materiales_index') }}" class="btn btn-outline-warning my-2 my-sm-0"><i class="fas fa-exchange-alt"></i> Volver</a>
    <button class="btn btn-outline-danger my-2 my-sm-0 ml-sm-3"><i class="fas fa-trash-alt"></i> Borrar</button>
</form>
