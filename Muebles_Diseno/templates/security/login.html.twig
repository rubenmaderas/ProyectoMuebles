{% extends 'base.html.twig' %}
{% block title %}Â¡Inicia Sesion!{% endblock %}
{% block body %}
    <div class="contenedor_formulario">
        <form method="post" class="w-75">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal text-center">Iniciar Sesion</h1>
            <label class="sr-only" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <label class="sr-only" for="inputPassword">Password</label>
            <input class="form-control" id="inputPassword" name="password" placeholder="Password" required type="password">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary justify-content-center" type="submit">Iniciar Sesion</button>
        </form>
    </div>
{% endblock %}
        